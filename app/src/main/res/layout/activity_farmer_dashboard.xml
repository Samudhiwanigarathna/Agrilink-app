<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FAFAFA"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dashboard Title -->
    <TextView
        android:text="Farmer Dashboard"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#2E7D32"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Quick Stats Section -->
    <LinearLayout
        android:orientation="horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtStock"
            android:text="Stock: 120kg"
            android:textColor="#555"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtOrders"
            android:text="Orders: 5"
            android:textColor="#555"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtEarnings"
            android:text="Earnings: Rs. 7500"
            android:textColor="#555"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnUploadProduct"
            android:text="Upload Product"
            android:backgroundTint="#2E7D32"
            android:textColor="#FFF"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnViewOrders"
            android:text="View Orders"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnManageStock"
            android:text="Manage Stock"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnNotifications"
            android:text="Notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Smart Notification Banner -->
    <TextView
        android:id="@+id/txtSmartAlerts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#FFF3E0"
        android:padding="10dp"
        android:text="🔔 Rain expected tomorrow. Consider storing dry goods."
        android:textColor="#D84315"
        android:textSize="14sp" />

    <!-- Bottom Navigation (Mockup) -->

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="222dp"
        android:background="#E0E0E0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="🏠 Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <Button
            android:text="📦 Stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <Button
            android:text="📋 Orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
        <Button
            android:text="👤 Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>
